generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String     @id @default(cuid())
  email           String     @unique
  password        String
  name            String
  avatar          String?
  difficulty      String?
  role            Role       @default(STUDENT)
  xp              Int        @default(0)
  level           Int        @default(1)
  streak          Int        @default(0)
  lastCompletedAt DateTime?
  createdAt       DateTime   @default(now())
  progress        Progress[]
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
}

model Course {
  id          String   @id @default(cuid())
  title       String
  description String
  imageUrl    String?  
  lessons     Lesson[]
}

model Lesson {
  id       String  @id @default(cuid())
  title    String
  content  String
  material  String?      
  videoUrl  String?
  task     Task?   @relation(fields: [taskId], references: [id])
  taskId   String? @unique
  course   Course  @relation(fields: [courseId], references: [id])
  courseId String
}

model Task {
  id             String  @id @default(cuid())
  title          String
  description    String
  expectedOutput String
  lesson         Lesson? @relation
}

model Progress {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  taskId      String
  completedAt DateTime @default(now())
}
